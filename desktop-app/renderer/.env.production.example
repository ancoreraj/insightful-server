# Production Environment Variables
# Copy this file to .env.local before building production DMG

# Production Backend API URL
# Replace with your deployed backend URL
NEXT_PUBLIC_API_URL=https://api.yourcompany.com/api

# AWS S3 Configuration for Screenshots
# Use read-only credentials with minimal permissions
NEXT_PUBLIC_AWS_ACCESS_KEY_ID=your-production-aws-key
NEXT_PUBLIC_AWS_SECRET_ACCESS_KEY=your-production-aws-secret
NEXT_PUBLIC_AWS_REGION=eu-north-1
NEXT_PUBLIC_S3_BUCKET=your-production-bucket

# Screenshot interval in seconds (default: 600 = 10 minutes for production)
NEXT_PUBLIC_SCREENSHOT_INTERVAL_SECONDS=600
